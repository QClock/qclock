{
    "name": "qclock",
    "version": "2.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "docker-compose up -d",
        "stop": "docker-compose down",
        "logs": "docker-compose logs -f",
        "deploy": "npm run erase ; export NODE_ENV=production; npm run build && cd build/ && npm run t2push",
        "device": "export NODE_ENV=development; npm run build && cd build/ && npm run t2run",
        "cleanup": "rm -rf build; mkdir build",
        "erase": "t2 erase",
        "pret2push": "npm run install-prod",
        "pret2run": "npm run install-prod",
        "t2push": "t2 push .",
        "t2run": "t2 run .",
        "config": "node tools/setconfig.js",
        "install-prod": "npm i --only=prod",
        "prebuild": "scripts/prebuild.sh",
        "build": "npm run babel",
        "postbuild": "scripts/postbuild.sh",
        "babel": "babel src --out-dir build",
        "predocker": "scripts/setup-docker.sh",
        "docker": "npx nodemon --exec babel-node src/index.js",
        "docker-ssh": "docker-compose run qclock /bin/sh"
    },
    "repository": "https://github.com/necccc/QTime.git",
    "keywords": [
        "Tessel",
        "fadecandy",
        "clock",
        "time"
    ],
    "dependencies": {
        "body": "5.1.0",
        "dotenv": "5.0.0",
        "esm": "^3.2.25",
        "moment-timezone": "0.5.14",
        "node-fadecandy": "2.0.4",
        "pino": "4.10.4",
        "redux": "3.7.2",
        "usb": "^1.6.2",
        "ws": "4.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/node": "^7.7.7",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/preset-env": "^7.7.7",
        "@qclock/client-aurora": "1.3.1",
        "babel-cli": "6.26.0",
        "babel-plugin-transform-class-properties": "6.24.1",
        "babel-preset-env": "1.6.1",
        "babel-watch": "2.0.7",
        "nodemon": "1.14.12",
        "watch": "1.0.2"
    },
    "license": "MIT",
    "readme": "",
    "nodemonConfig": {
        "ignore": [
            "test/*",
            "docs/*",
            "browser-vis/*"
        ],
        "delay": "2000"
    },
    "qclock": {
        "web": "@qclock/client-aurora",
        "network": {
            "ssid": "qclock"
        },
        "display": {},
        "time": 0
    }
}
